generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProductType {
  MACHINE_SALE
  MACHINE_RENT
  PART
}

enum OrderStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

enum PaymentMethod {
  COD
  BANK_TRANSFER
}

enum PaymentStatus {
  UNPAID
  PAID
}

model Product {
  id          String      @id @default(cuid())
  title       String
  slug        String      @unique
  description String?
  type        ProductType
  price       Int         // store in BDT as integer (e.g., 25000)
  stock       Int         @default(0)
  isActive    Boolean     @default(true)

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  orderItems  OrderItem[]
}

model Order {
  id            String        @id @default(cuid())

  customerName  String
  phone         String
  addressLine1  String
  city          String
  notes         String?

  status        OrderStatus   @default(PENDING)

  paymentMethod PaymentMethod
  paymentStatus PaymentStatus @default(UNPAID)

  subtotal      Int
  deliveryFee   Int           @default(0)
  total         Int

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  items         OrderItem[]
}

model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  productId String

  titleSnapshot String
  unitPrice     Int
  quantity      Int

  createdAt DateTime @default(now())

  order    Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product  Product @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([orderId])
  @@index([productId])
}
