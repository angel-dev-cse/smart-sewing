generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProductType {
  MACHINE_SALE
  MACHINE_RENT
  PART
}

enum OrderStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

enum PaymentMethod {
  COD
  BKASH
  NAGAD
  BANK_TRANSFER
}

enum PaymentStatus {
  UNPAID
  PAID
}

enum InventoryMovementKind {
  IN
  OUT
  ADJUST
}

enum SalesInvoiceStatus {
  DRAFT
  ISSUED
  CANCELLED
}

enum SalesInvoicePaymentStatus {
  UNPAID
  PARTIAL
  PAID
}

enum LedgerAccountKind {
  CASH
  BKASH
  NAGAD
  BANK
}

enum LedgerCategoryKind {
  EXPENSE
  INCOME
}

enum LedgerEntryDirection {
  IN
  OUT
}

enum RentalContractStatus {
  DRAFT
  ACTIVE
  CLOSED
  CANCELLED
}

enum RentalBillStatus {
  DRAFT
  ISSUED
  CANCELLED
}

enum RentalBillPaymentStatus {
  UNPAID
  PAID
}

enum PurchaseBillStatus {
  DRAFT
  ISSUED
  CANCELLED
}

enum PartyType {
  CUSTOMER
  SUPPLIER
  BOTH
}

enum PurchasePaymentMethod {
  CASH
  BKASH
  NAGAD
  BANK
}

enum SalesReturnStatus {
  DRAFT
  ISSUED
  CANCELLED
}

enum PurchaseReturnStatus {
  DRAFT
  ISSUED
  CANCELLED
}

enum WriteOffStatus {
  DRAFT
  ISSUED
  CANCELLED
}

model Product {
  id          String      @id @default(cuid())
  title       String
  slug        String      @unique
  description String?
  type        ProductType
  price       Int // store in BDT as integer (e.g., 25000)
  stock       Int         @default(0)
  isActive    Boolean     @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orderItems           OrderItem[]
  movements            InventoryMovement[]
  salesInvoiceItems    SalesInvoiceItem[]
  stockAdjustmentItems StockAdjustmentItem[]
  rentalContractItems  RentalContractItem[]
  rentalBillItems      RentalBillItem[]
  purchaseBillItems    PurchaseBillItem[]

  salesReturnItems    SalesReturnItem[]
  purchaseReturnItems PurchaseReturnItem[]
  writeOffItems       WriteOffItem[]
}

model Order {
  id String @id @default(cuid())

  customerName   String
  phone          String
  addressLine1   String
  city           String
  notes          String?
  salesInvoiceId String?       @unique
  salesInvoice   SalesInvoice? @relation(fields: [salesInvoiceId], references: [id])

  status OrderStatus @default(PENDING)

  paymentMethod PaymentMethod
  paymentStatus PaymentStatus @default(UNPAID)

  subtotal    Int
  deliveryFee Int @default(0)
  total       Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  items     OrderItem[]
  movements InventoryMovement[]
}

model OrderItem {
  id        String @id @default(cuid())
  orderId   String
  productId String

  titleSnapshot String
  unitPrice     Int
  quantity      Int

  createdAt DateTime @default(now())

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([orderId])
  @@index([productId])
}

model InventoryMovement {
  id          String                @id @default(cuid())
  productId   String
  kind        InventoryMovementKind
  quantity    Int // IN/OUT positive; ADJUST is signed delta
  beforeStock Int
  afterStock  Int
  note        String?

  // "Document-first" future-proofing:
  // Later: SALES_INVOICE, PURCHASE_ORDER, RENTAL, etc.
  refType String?
  refId   String?

  orderId   String? // convenience link for current order flow
  createdAt DateTime @default(now())

  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)
  order   Order?  @relation(fields: [orderId], references: [id], onDelete: SetNull)

  @@unique([refType, refId, productId, kind])
  @@index([productId, createdAt])
  @@index([orderId])
  @@index([refType, refId])
}

model SalesInvoice {
  id        String             @id @default(cuid())
  invoiceNo Int                @unique
  status    SalesInvoiceStatus @default(DRAFT)
  order     Order?

  customerName String
  phone        String?
  addressLine1 String?
  city         String?

  notes String?

  paymentMethod PaymentMethod?
  paymentStatus SalesInvoicePaymentStatus @default(UNPAID)

  subtotal    Int @default(0)
  discount    Int @default(0)
  deliveryFee Int @default(0)
  total       Int @default(0)

  issuedAt  DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  items SalesInvoiceItem[]

  partyId String?
  party   Party?  @relation(fields: [partyId], references: [id])

  salesReturns SalesReturn[]

  @@index([status, createdAt])
  @@index([invoiceNo])
}

model SalesInvoiceItem {
  id             String @id @default(cuid())
  salesInvoiceId String
  productId      String

  titleSnapshot String
  unitPrice     Int
  quantity      Int

  createdAt DateTime @default(now())

  salesInvoice SalesInvoice @relation(fields: [salesInvoiceId], references: [id], onDelete: Cascade)
  product      Product      @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([salesInvoiceId])
  @@index([productId])
}

model InvoiceCounter {
  id     String @id
  nextNo Int
}

model StockAdjustment {
  id        String   @id @default(cuid())
  reason    String?
  createdAt DateTime @default(now())

  items StockAdjustmentItem[]

  @@index([createdAt])
}

model StockAdjustmentItem {
  id                String @id @default(cuid())
  stockAdjustmentId String
  productId         String

  delta       Int
  beforeStock Int
  afterStock  Int
  note        String?

  createdAt DateTime @default(now())

  stockAdjustment StockAdjustment @relation(fields: [stockAdjustmentId], references: [id], onDelete: Cascade)
  product         Product         @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([stockAdjustmentId])
  @@index([productId])
}

model LedgerAccount {
  id             String            @id @default(cuid())
  name           String            @unique
  kind           LedgerAccountKind
  openingBalance Int               @default(0)
  isActive       Boolean           @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  entries LedgerEntry[]

  @@index([kind, isActive])
}

model LedgerCategory {
  id       String             @id @default(cuid())
  name     String             @unique
  kind     LedgerCategoryKind
  isActive Boolean            @default(true)

  createdAt DateTime @default(now())

  entries LedgerEntry[]

  @@index([kind, isActive])
}

model LedgerEntry {
  id         String  @id @default(cuid())
  accountId  String
  categoryId String?

  direction  LedgerEntryDirection
  amount     Int // BDT integer only (e.g., 5500)
  note       String?
  occurredAt DateTime             @default(now())

  // future-proof: link to invoices/orders/etc
  refType String?
  refId   String?

  createdAt DateTime @default(now())

  account          LedgerAccount     @relation(fields: [accountId], references: [id], onDelete: Restrict)
  category         LedgerCategory?   @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  purchasePayments PurchasePayment[]
  salesReturnRefunds    SalesReturnRefund[]
  purchaseReturnRefunds PurchaseReturnRefund[]

  @@index([accountId, occurredAt])
  @@index([categoryId, occurredAt])
  @@index([refType, refId])
}

model RentalContract {
  id         String               @id @default(cuid())
  contractNo Int                  @unique
  status     RentalContractStatus @default(DRAFT)

  customerName String
  phone        String?
  addressLine1 String?
  city         String?

  startDate DateTime  @default(now())
  endDate   DateTime?

  deposit Int     @default(0)
  notes   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  items RentalContractItem[]
  bills RentalBill[]

  partyId String?
  party   Party?  @relation(fields: [partyId], references: [id])

  @@index([status, createdAt])
  @@index([contractNo])
}

model RentalContractItem {
  id               String @id @default(cuid())
  rentalContractId String
  productId        String

  titleSnapshot String
  monthlyRate   Int
  quantity      Int

  createdAt DateTime @default(now())

  rentalContract RentalContract @relation(fields: [rentalContractId], references: [id], onDelete: Cascade)
  product        Product        @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([rentalContractId])
  @@index([productId])
}

model RentalBill {
  id               String @id @default(cuid())
  billNo           Int    @unique
  rentalContractId String

  status        RentalBillStatus        @default(DRAFT)
  paymentStatus RentalBillPaymentStatus @default(UNPAID)

  periodStart DateTime
  periodEnd   DateTime

  subtotal Int @default(0)
  total    Int @default(0)

  issuedAt  DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  items RentalBillItem[]

  rentalContract RentalContract @relation(fields: [rentalContractId], references: [id], onDelete: Cascade)

  @@index([rentalContractId, createdAt])
  @@index([status, createdAt])
  @@index([billNo])
}

model RentalBillItem {
  id           String @id @default(cuid())
  rentalBillId String
  productId    String

  titleSnapshot String
  monthlyRate   Int
  quantity      Int

  createdAt DateTime @default(now())

  rentalBill RentalBill @relation(fields: [rentalBillId], references: [id], onDelete: Cascade)
  product    Product    @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([rentalBillId])
  @@index([productId])
}

model PurchaseBill {
  id     String             @id @default(cuid())
  billNo Int                @unique
  status PurchaseBillStatus @default(DRAFT)

  supplierName String
  phone        String?
  notes        String?

  subtotal Int @default(0)
  total    Int @default(0)

  issuedAt  DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  items PurchaseBillItem[]

  partyId String?
  party   Party?  @relation(fields: [partyId], references: [id])

  // ✅ NEW
  payments PurchasePayment[]

  purchaseReturns PurchaseReturn[]

  @@index([status, createdAt])
  @@index([billNo])
}

model PurchasePayment {
  id             String @id @default(cuid())
  purchaseBillId String

  method PurchasePaymentMethod
  amount Int
  note   String?
  paidAt DateTime              @default(now())

  // ✅ ledger linkage (audit/history)
  ledgerEntryId String?
  ledgerEntry   LedgerEntry? @relation(fields: [ledgerEntryId], references: [id], onDelete: SetNull)

  purchaseBill PurchaseBill @relation(fields: [purchaseBillId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([purchaseBillId, paidAt])
}

model PurchaseBillItem {
  id             String @id @default(cuid())
  purchaseBillId String
  productId      String

  titleSnapshot String
  unitCost      Int
  quantity      Int

  createdAt DateTime @default(now())

  purchaseBill PurchaseBill @relation(fields: [purchaseBillId], references: [id], onDelete: Cascade)
  product      Product      @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([purchaseBillId])
  @@index([productId])
}

model SalesReturn {
  id       String            @id @default(cuid())
  returnNo Int               @unique
  status   SalesReturnStatus @default(ISSUED)

  salesInvoiceId String?
  salesInvoice   SalesInvoice? @relation(fields: [salesInvoiceId], references: [id], onDelete: SetNull)

  partyId String?
  party   Party?  @relation(fields: [partyId], references: [id], onDelete: SetNull)

  customerName String
  phone        String?
  notes        String?

  subtotal Int @default(0)
  total    Int @default(0)

  issuedAt  DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  items   SalesReturnItem[]
  refunds SalesReturnRefund[]

  @@index([status, createdAt])
  @@index([returnNo])
  @@index([partyId])
  @@index([salesInvoiceId])
}

model SalesReturnItem {
  id           String @id @default(cuid())
  salesReturnId String
  productId    String

  titleSnapshot String
  unitPrice     Int
  quantity      Int

  createdAt DateTime @default(now())

  salesReturn SalesReturn @relation(fields: [salesReturnId], references: [id], onDelete: Cascade)
  product     Product     @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([salesReturnId])
  @@index([productId])
}

model SalesReturnRefund {
  id           String @id @default(cuid())
  salesReturnId String

  method PurchasePaymentMethod
  amount Int
  note   String?
  paidAt DateTime @default(now())

  ledgerEntryId String?
  ledgerEntry   LedgerEntry? @relation(fields: [ledgerEntryId], references: [id], onDelete: SetNull)

  salesReturn SalesReturn @relation(fields: [salesReturnId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([salesReturnId, paidAt])
  @@index([ledgerEntryId])
}

model PurchaseReturn {
  id       String              @id @default(cuid())
  returnNo Int                 @unique
  status   PurchaseReturnStatus @default(ISSUED)

  purchaseBillId String?
  purchaseBill   PurchaseBill? @relation(fields: [purchaseBillId], references: [id], onDelete: SetNull)

  partyId String?
  party   Party?  @relation(fields: [partyId], references: [id], onDelete: SetNull)

  supplierName String
  phone        String?
  notes        String?

  subtotal Int @default(0)
  total    Int @default(0)

  issuedAt  DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  items   PurchaseReturnItem[]
  refunds PurchaseReturnRefund[]

  @@index([status, createdAt])
  @@index([returnNo])
  @@index([partyId])
  @@index([purchaseBillId])
}

model PurchaseReturnItem {
  id             String @id @default(cuid())
  purchaseReturnId String
  productId      String

  titleSnapshot String
  unitCost      Int
  quantity      Int

  createdAt DateTime @default(now())

  purchaseReturn PurchaseReturn @relation(fields: [purchaseReturnId], references: [id], onDelete: Cascade)
  product        Product        @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([purchaseReturnId])
  @@index([productId])
}

model PurchaseReturnRefund {
  id             String @id @default(cuid())
  purchaseReturnId String

  method PurchasePaymentMethod
  amount Int
  note   String?
  paidAt DateTime @default(now())

  ledgerEntryId String?
  ledgerEntry   LedgerEntry? @relation(fields: [ledgerEntryId], references: [id], onDelete: SetNull)

  purchaseReturn PurchaseReturn @relation(fields: [purchaseReturnId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([purchaseReturnId, paidAt])
  @@index([ledgerEntryId])
}

model WriteOff {
  id         String        @id @default(cuid())
  writeOffNo Int           @unique
  status     WriteOffStatus @default(ISSUED)

  reason String?
  notes  String?

  totalValue Int @default(0)

  issuedAt  DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  items WriteOffItem[]

  @@index([status, createdAt])
  @@index([writeOffNo])
}

model WriteOffItem {
  id        String @id @default(cuid())
  writeOffId String
  productId String

  titleSnapshot String
  unitValue     Int
  quantity      Int

  createdAt DateTime @default(now())

  writeOff WriteOff @relation(fields: [writeOffId], references: [id], onDelete: Cascade)
  product  Product  @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([writeOffId])
  @@index([productId])
}

model Party {
  id      String    @id @default(cuid())
  type    PartyType
  name    String
  phone   String?
  email   String?
  address String?
  companyName String?
  notes   String?

  // Optional labels/tags for quick filtering/search later (e.g. "wholesale", "VIP")
  tags    String[]  @default([])

  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  salesInvoices   SalesInvoice[]
  purchaseBills   PurchaseBill[]
  rentalContracts RentalContract[]

  salesReturns    SalesReturn[]
  purchaseReturns PurchaseReturn[]

  @@index([type, isActive])
  @@index([name])
}
