generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProductType {
  MACHINE_SALE
  MACHINE_RENT
  PART
}

enum OrderStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

enum PaymentMethod {
  COD
  BKASH
  NAGAD
  BANK_TRANSFER
}

enum PaymentStatus {
  UNPAID
  PAID
}

enum InventoryMovementKind {
  IN
  OUT
  ADJUST
}

model Product {
  id          String      @id @default(cuid())
  title       String
  slug        String      @unique
  description String?
  type        ProductType
  price       Int         // store in BDT as integer (e.g., 25000)
  stock       Int         @default(0)
  isActive    Boolean     @default(true)

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  orderItems  OrderItem[]
  movements   InventoryMovement[]
}

model Order {
  id            String        @id @default(cuid())

  customerName  String
  phone         String
  addressLine1  String
  city          String
  notes         String?

  status        OrderStatus   @default(PENDING)

  paymentMethod PaymentMethod
  paymentStatus PaymentStatus @default(UNPAID)

  subtotal      Int
  deliveryFee   Int           @default(0)
  total         Int

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  items         OrderItem[]
  movements     InventoryMovement[]

}

model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  productId String

  titleSnapshot String
  unitPrice     Int
  quantity      Int

  createdAt DateTime @default(now())

  order    Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product  Product @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([orderId])
  @@index([productId])
}

model InventoryMovement {
  id          String                @id @default(cuid())
  productId   String
  kind        InventoryMovementKind
  quantity    Int                   // IN/OUT positive; ADJUST is signed delta
  beforeStock Int
  afterStock  Int
  note        String?

  // "Document-first" future-proofing:
  // Later: SALES_INVOICE, PURCHASE_ORDER, RENTAL, etc.
  refType     String?
  refId       String?

  orderId     String?               // convenience link for current order flow
  createdAt   DateTime              @default(now())

  product     Product               @relation(fields: [productId], references: [id], onDelete: Cascade)
  order       Order?                @relation(fields: [orderId], references: [id], onDelete: SetNull)

  @@index([productId, createdAt])
  @@index([orderId])
  @@index([refType, refId])
}
